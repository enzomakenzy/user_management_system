<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name , "Nome Completo:"%><br>
    <%= f.text_field :name, autofocus: "name", autocomplete: true %>
  </div>

  <% if User.count > 0 %>
    <div class="field">
      <%= f.label :acess, "Nível de Acesso:" %><br>
      <%= f.select :acess, [["Administrador", "admin"], ["Gestor de RH", "gestor"]] %>
    </div>
    
    <div class="field">
      <%= f.label :departments, "Departamento:" %><br>
      <%= f.collection_check_boxes :department_ids, Department.all, :id, :name %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, "Email:" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Senha" %>
    <% if @minimum_password_length %>
    <em>(Mínimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme a Senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastre-se" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
