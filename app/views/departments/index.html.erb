<div class="mx-auto max-w-5xl my-4">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl font-geinst">Departamentos</h1>
    <%= link_to "Criar novo departamento", new_department_path, class: "rounded-lg py-3 px-5 bg-blue text-white block font-medium shadow-md" %>
  </div>

  <div id="departments" class="min-w-full mt-5">
    <% @departments.each do |department| %>
      <div class="flex justify-between items-center">
        <%= tag.span department.name, class: "text-lg" %>
        <%= link_to "Mostrar departamento", department, class: "ml-2 rounded-lg py-3 px-5 bg-blue text-white inline-block font-medium shadow-md" %>
      </div>
      <hr class="my-5 border-gray-400">
    <% end %>
  </div>
</div>
