<div class="mx-auto" id="<%= dom_id department %>">
  <p class="my-5">
    <strong class="text-lg block font-medium mb-1">Nome:</strong>
    <%= department.name %>
  </p>

  <p class="my-5">
    <strong class="text-lg block font-medium mb-1">Descrição:</strong>
    <%= department.description %>
  </p>

  <p class="my-5">
    <strong class="text-lg block font-medium mb-1">Código do departamento:</strong>
    <%= department.code %>
  </p>

  <div class="my-5">
    <strong class="text-lg block font-medium mb-1">Endereço:</strong>
    <p>Rua: <%= department.adress["street"] %></p>
    <p>Número: <%= department.adress["number"]%></p>
    <p>Complemento: <%= department.adress["complement"]%></p>
    <p>Bairro: <%= department.adress["neighborhood"]%></p>
    <p>Cidade: <%= department.adress["city"] %></p>
    <p>Estado: <%= department.adress["state"] %></p>
    <p>CEP: <%= department.adress["cep"] %></p>
  </div>

  <p class="my-5">
    <strong class="text-lg block font-medium mb-1">Status:</strong>
    <%= department.status %>
  </p>

</div>
