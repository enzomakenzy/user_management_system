<div class="mx-auto md:w-2/3 max-w-2xl my-5">
  <%= render @employee %>

  <%= link_to "Editar informações", edit_employee_path(@employee), class: "rounded-lg py-2 px-4 bg-blue text-white inline-block font-medium cursor-pointer" %>
  <%= link_to "Voltar", employees_path, class: "rounded-lg py-2 px-4 bg-blue text-white inline-block font-medium cursor-pointer" %>
  <div class="inline-block">
    <%= button_to "Deletar funcionário", @employee, method: :delete, class: "rounded-lg py-2 px-4 bg-blue text-white inline-block font-medium cursor-pointer" %>
  </div>
</div>
