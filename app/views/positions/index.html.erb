<div class="max-w-5xl mx-auto mt-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl font-geinst">Cargos</h1>
      <%= link_to "Criar novo cargo", new_position_path, class: "rounded-lg py-3 px-5 bg-blue text-white block font-medium" %>
    </div>
    <div id="positions" class="min-w-full mt-10">
      <% @positions.each do |position| %>
        <div class="flex justify-between">
          <%= tag.span position.name, class: "text-lg" %>
          <%= link_to "Mostrar cargo", position, class: "rounded-lg py-3 px-5 bg-blue text-white block font-medium" %>
        </div>
        <hr class="my-4 border-gray-400">
      <% end %>
    </div>
</div>
